@model IEnumerable<WebApplication2.Models.DisplayModel>
@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous">

<div class="m-2">
<h1 style="text-align:center">Student Records</h1>
    <div class="table-responsive">
        <table class="table">
    <tr style="border-style:groove;text-align:center">
        <th>Id</th>
        <th>RollNo</th>
        <th>Name</th>
        <th>Emailid</th>
        <th>Password</th>
        <th>dob</th>
        <th>Mobile</th>
        <th>Gender</th>
        <th>Fee</th>
        <th>dept</th>
        <th>status</th>
        <th>Delete</th>
        <th>edit</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr style="border-style:groove;text-align:center;margin-left:55vh">
            <td>@item.Id</td>
            <td>@item.RollNo</td>
            <td>@item.Name</td>
            <td>@item.EmailId</td>
            <td>@item.Password</td>
            <td>@item.dob</td>
            <td>@item.Mobile</td>
            <td>@item.gender</td>
            <td>@item.Fee</td>
            <td>@item.dept</td>
            <td>@item.status</td>
            <td>@Html.ActionLink("Delete This","Delete","Accounts",new{id=item.Id},new {onclick="return confirm('Are u sure to delete this record')"})</td>
                    <td>@Html.ActionLink("Update this","Edit","Accounts",new{id=item.Id})</td>
        </tr>
    }
</table>
</div>
</div>

